                tags: ["#ÂπºË≤ì", "#Â•ΩÂ•á", "#Á¥îÁúü"]
            },
            {
                id: 30,
                title: "ÊìäÊéåÔºÅ",
                caption: "ÂÅöÂæóÂ•ΩÔºå‰Ω†‰ªäÂ§©Ê¥ª‰∏ã‰æÜ‰∫ÜÔºÅHigh five.",
                category: "wholesome",
                categoryDisplay: "ÊöñÂøÉË≤ì",
                type: "gif",
                imageUrl: "https://media.giphy.com/media/pHb82iyFTEGv8sI5hU/giphy.gif",
                tags: ["#ÈºìÂãµ", "#Ê≠£ËÉΩÈáè", "#ÊìäÊéå"]
            }
        ];

        // --- State ---
        let currentCategory = 'all';
        let currentType = 'all';
        let searchQuery = '';

        // --- Elements ---
        const galleryEl = document.getElementById('meme-gallery');
        const categoryContainer = document.getElementById('category-container');
        const searchInput = document.getElementById('search-input');
        const typeButtons = document.querySelectorAll('.toggle-btn');
        const randomBtn = document.getElementById('btn-random');
        const randomSection = document.getElementById('random-meme-section');
        const homeFloatingBtn = document.getElementById('home-floating-btn');

        // --- Initialization ---
        function init() {
            renderCategories();
            renderGallery();
            setupEventListeners();
        }

        // --- Render Categories ---
        function renderCategories() {
            const categories = [
                { id: 'all', label: 'ÂÖ®ÈÉ®' },
                { id: 'rare', label: '‰πù‰πùÊàêÁ®ÄÁΩïÁâ©' },
                { id: 'reaction', label: 'Ë≤ìË≤ìË°®ÊÉÖÂåÖ' },
                { id: 'depressed', label: 'Âé≠‰∏ñË≤ì' },
                { id: 'wholesome', label: 'ÊöñÂøÉË≤ì' },
                { id: 'kian', label: '„Ñé„Ñß„Ñ§Ë≤ì' }
            ];

            categoryContainer.innerHTML = categories.map(cat => `
                <button class="cat-chip ${cat.id === 'all' ? 'active' : ''}" 
                        data-id="${cat.id}"
                        onclick="setCategory('${cat.id}')">
                    ${cat.label}
                </button>
            `).join('');
        }

        // --- Filtering Logic ---
        function getFilteredMemes() {
            return memeData.filter(meme => {
                // 1. Category Filter
                const catMatch = currentCategory === 'all' || meme.category === currentCategory;

                // 2. Type Filter
                const typeMatch = currentType === 'all' || meme.type === currentType;

                // 3. Search Filter
                const searchLower = searchQuery.toLowerCase();
                const searchMatch = meme.title.toLowerCase().includes(searchLower) || 
                                    meme.caption.toLowerCase().includes(searchLower) ||
                                    meme.tags.some(tag => tag.toLowerCase().includes(searchLower));

                return catMatch && typeMatch && searchMatch;
            });
        }

        // --- Render Gallery ---
        function renderGallery() {
            const memes = getFilteredMemes();
            galleryEl.innerHTML = '';

            if (memes.length === 0) {
                galleryEl.innerHTML = `<div style="grid-column: 1/-1; text-align: center; color: #888; padding: 40px;">
                    <h3>Êâæ‰∏çÂà∞Ë≤ìË≤ì... üòø</h3>
                    <p>ÊèõÂÄãÈóúÈçµÂ≠óË©¶Ë©¶ÁúãÔºü</p>
                </div>`;
                return;
            }

            memes.forEach(meme => {
                const card = document.createElement('div');
                card.className = 'meme-card';
                card.innerHTML = `
                    <div class="card-img-box">
                        <img src="${meme.imageUrl}" alt="${meme.title}" loading="lazy">
                        <span class="category-label">${meme.categoryDisplay}</span>
                        ${meme.type === 'gif' ? '<span class="type-badge">GIF</span>' : ''}
                    </div>
                    <div class="card-content">
                        <h3 class="card-title">${meme.title}</h3>
                        <p class="card-desc">${meme.caption}</p>
                        <div class="card-tags">
                            ${meme.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                        </div>
                        <div class="card-actions">
                            <button class="action-btn heart-btn" onclick="toggleLike(this)">
                                ‚ù§
                            </button>
                            <button class="action-btn" onclick="copyCaption('${meme.title} - ${meme.caption}')">
                                üìã
                            </button>
                            <button class="action-btn" title="Share">
                                ‚Üó
                            </button>
                        </div>
                    </div>
                `;
                galleryEl.appendChild(card);
            });
        }

        // --- Feature Functions ---
        window.setCategory = (id) => {
            currentCategory = id;
            
            // Update Visuals
            const chips = document.querySelectorAll('.cat-chip');
            chips.forEach(chip => {
                if (chip.dataset.id === id) {
                    chip.classList.add('active');
                } else {
                    chip.classList.remove('active');
                }
            });
            
            renderGallery();
        };

        function setupEventListeners() {
            // Type Toggle
            typeButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    typeButtons.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    currentType = btn.dataset.type;
                    renderGallery();
                });
            });

            // Search
            searchInput.addEventListener('input', (e) => {
                searchQuery = e.target.value;
                renderGallery();
            });

            // Random Meme
            randomBtn.addEventListener('click', showRandomMeme);

            // Scroll Listener for Floating Button
            window.addEventListener('scroll', () => {
                if (window.scrollY > 300) {
                    homeFloatingBtn.classList.add('show');
                } else {
                    homeFloatingBtn.classList.remove('show');
                }
            });

            // Back to Top Click
            homeFloatingBtn.addEventListener('click', scrollToHero);
        }

        // Random Meme Logic
        function showRandomMeme() {
            const randomIndex = Math.floor(Math.random() * memeData.length);
            const meme = memeData[randomIndex];

            randomSection.style.display = 'block';
            randomSection.innerHTML = `
                <div class="random-content">
                    <div style="text-align:center;">
                        <span class="random-badge">‚ú® ‰ªäÂ§©ÁöÑÂëΩÂÆöË≤ì ‚ú®</span>
                        <h2 style="margin-top:10px; font-size: 2rem;">${meme.title}</h2>
                    </div>
                    <div class="random-img-container">
                        <img src="${meme.imageUrl}" alt="${meme.title}">
                    </div>
                    <p style="font-size: 1.2rem; color: var(--text-light);">${meme.caption}</p>
                    <button class="btn-secondary" onclick="showRandomMeme()">ÂÜçÊäΩ‰∏ÄÈöªÔºÅ üé≤</button>
                </div>
            `;
            
            // Scroll to it
            randomSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        // UI Helpers
        window.scrollToGallery = () => {
            document.getElementById('gallery-anchor').scrollIntoView({ behavior: 'smooth' });
        };

        window.scrollToHero = () => {
            document.getElementById('hero').scrollIntoView({ behavior: 'smooth' });
        };

        window.toggleLike = (btn) => {
            btn.classList.toggle('liked');
        };

        window.copyCaption = (text) => {
            navigator.clipboard.writeText(text).then(() => {
                showToast();
            }).catch(err => {
                console.error('Failed to copy: ', err);
            });
        };

        function showToast() {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        // Run
        init();

    </script>
</body>
</html>
